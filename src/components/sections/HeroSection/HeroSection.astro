---
import type { HeroContent } from '../../../content/types';

interface Props {
  content: HeroContent;
}

const { content } = Astro.props;
---

<section class="mt-40 pt-14 md:mt-0 md:pt-64 py-20 md:py-24 relative">
  <div class="absolute inset-0 bg-almost-black opacity-75 z-10"></div>

  <div class="absolute inset-0 z-0 bg-center overflow-hidden">
    <img 
      src="/images/hero-background.jpg" 
      alt="" 
      class="w-full h-full object-cover object-center" 
      loading="eager" 
      width="2200" 
      height="954" 
      decoding="async"
    />
  </div>

  <div class="relative container mx-auto flex flex-col lg:flex-row justify-between gap-10 lg:gap-0 z-10">
    <div class="a_side flex flex-col gap-4 lg:gap-8 w-full lg:w-1/2">
      <h1 class="text-5xl font-semibold font-title text-white">
        <span class="font-normal">{content.title}</span>
        <em> {content.titleEmphasis}</em>
        <span class="font-normal"> {content.titleSuffix}</span>
      </h1>
      
      <p class="text-media-position-description text-lg font-normal text-white whitespace-pre-line" set:html={content.description} />

      <div class="">
        <img 
          src="/logos/riverwood-capital-logo.png" 
          class="w-1/3" 
          alt="Riverwood Capital Logo" 
          width="980" 
          height="243" 
          loading="lazy" 
          decoding="async"
        />
      </div>

      <div class="btns_group flex flex-col md:flex-row gap-4 mt-2">
        <a href={content.ctaLink} class="identity-btn hovered">
          {content.ctaText}
        </a>
      </div>
    </div>

    <div class="b_side">
      <div class="flex flex-col self-start h-full lg:pl-24 text-identity-blue">
        {content.stats.map((stat) => (
          <p class="text-lg font-normal border-l-2 border-identity-blue pl-5">
            {stat}
          </p>
        ))}
      </div>
    </div>
  </div>
</section>
