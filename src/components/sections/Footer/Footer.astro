                <p class="font-light text-sm text-safe-green">{content.terms}</p>
              </a>
              <a href={pt ? '/pt-br/politica-de-privacidade-e-cookies' : '/privacy-and-cookie-statement'}>
                <p class="font-light text-sm text-safe-green">{content.privacy}</p>
              </a>
              <a href={pt ? '/pt-br/politica-de-privacidade-e-cookies' : '/privacy-and-cookie-statement'}>
                <p class="font-light text-sm text-safe-green">{content.cookies}</p>
              </a>
            </div>
          </div>
