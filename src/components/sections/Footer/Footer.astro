---
import type { FooterContent } from '../../content/types';
import { isPt } from '../../../lib/locale';

interface Props {
  content: FooterContent;
  lang: 'en' | 'pt' | 'pt-br';
}

const { content, lang } = Astro.props;
const pt = isPt(lang);
---

<section class="footer bg-almost-white font-base">
  <div class="footer_container container mx-auto py-8 flex flex-col gap-10 w-full max-md:max-w-full items-start">
    <div class="row flex flex-col lg:flex-row gap-8 justify-between">
      <div class="card flex justify-center border-2 border-safe-green text-safe-green rounded-xl lg:w-1/4 h-3/4 items-center">
        <div class="content-card flex flex-col justify-center gap-4 p-10 w-full">
          <h3 class="font-semibold text-safe-green font-title">{content.stayConnected.title}</h3>
          <p class="font-normal text-safe-green">{content.stayConnected.description}</p>
          <a href={pt ? '/pt-br/blog' : '/blog'} class="outlined-btn hovered flex gap-4">
            {content.stayConnected.ctaText}
          </a>
        </div>
      </div>

      <div class="lists_holder flex flex-col md:flex-row md:w-full justify-around gap-4 md:gap-0">
        <div class="list flex flex-col gap-4 px-2">
          <h3 class="font-semibold text-safe-green border-b-2 border-safe-green font-title pb-2">{content.support.title}</h3>
          <ul class="flex flex-col gap-2">
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? 'https://docs.senhasegura.io/v4/docs/pt/senhasegura' : 'https://docs.senhasegura.io/v4/docs/en/senhasegura'}>{content.support.documentation}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/servicos/centro-de-solucoes' : '/services/solution-center'}>{content.support.solutionCenter}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/sugestoes' : '/suggestions'}>{content.support.suggestions}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/servicos/treinamento-e-certificacao' : '/services/training-and-certification'}>{content.support.trainingAndCertification}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/servicos/implementacao-e-consultoria' : '/services/deployment-and-consulting'}>{content.support.deploymentAndConsulting}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/politicas-e-termos/politica-de-suporte' : '/policies-and-terms/support-policy'}>{content.support.supportPolicy}</a>
            </li>
          </ul>
        </div>

        <div class="list flex flex-col gap-4 px-2">
          <h3 class="font-semibold text-safe-green border-b-2 border-safe-green font-title pb-2">{content.resources.title}</h3>
          <ul class="flex flex-col gap-2">
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/blog' : '/blog'}>{content.resources.blog}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/recursos' : '/resources'}>{content.resources.eBooks}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/recursos' : '/resources'}>{content.resources.whitepapers}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? 'https://lp.senhasegura.co/PT/RICH-MATERIALS' : 'https://lp.senhasegura.co/EN/RICH-MATERIALS'}>{content.resources.datasheets}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/recursos' : '/resources'}>{content.resources.infographics}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/casos-de-cliente' : '/customer-cases'}>{content.resources.caseStudies}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/webinars-e-eventos' : '/webinars-and-events'}>{content.resources.webinarsAndEvents}</a>
            </li>
          </ul>
        </div>

        <div class="list flex flex-col gap-4 px-2">
          <h3 class="font-semibold text-safe-green border-b-2 border-safe-green font-title pb-2">{content.partners.title}</h3>
          <ul class="flex flex-col gap-2">
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/parceiros/sobre-o-programa' : '/partners/about-the-program'}>{content.partners.aboutTheProgram}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/parceiros/torne-se-parceiro' : '/partners/become-a-partner'}>{content.partners.becomeAPartner}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/parceiros/sobre-o-programa' : '/partners/about-the-program'}>{content.partners.securityAllianceProgram}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href="https://university.segura.security/plus/">{content.partners.university}</a>
            </li>
          </ul>
        </div>

        <div class="list flex flex-col gap-4 px-2">
          <h3 class="font-semibold text-safe-green border-b-2 border-safe-green font-title pb-2">{content.company.title}</h3>
          <ul class="flex flex-col gap-2">
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/sobre' : '/about'}>{content.company.aboutUs}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/empresa/conquistas' : '/company/achievements'}>{content.company.achievements}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/empresa/carreira' : '/company/career'}>{content.company.workWithUs}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/empresa/operacoes' : '/company/operations'}>{content.company.operations}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/politica-de-privacidade-e-cookies' : '/privacy-and-cookie-statement'}>{content.company.termsOfUse}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/politica-de-privacidade-e-cookies' : '/privacy-and-cookie-statement'}>{content.company.privacyAndCookiePolicy}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/politicas-e-termos/politica-de-seguranca-da-informacao' : '/policies-and-terms/information-security-policy'}>{content.company.informationSecurityPolicy}</a>
            </li>
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? 'https://canal.ouvidordigital.com.br/segura?lang=pt' : 'https://canal.ouvidordigital.com.br/segura?lang=en'}>{content.company.whistleblowingChannel}</a>
            </li>
          </ul>
        </div>

        <div class="list flex flex-col gap-4 px-2">
          <h3 class="font-semibold text-safe-green border-b-2 border-safe-green font-title pb-2">{content.usCenter.title}</h3>
          <ul class="flex flex-col gap-2">
            <li class="font-normal text-safe-green py-3 px-4 hover:bg-password-green hover:bg-opacity-10 hover:rounded-lg hover:cursor-pointer hover:text-future-green">
              <a href={pt ? '/pt-br/sobre' : '/about'}>
                {pt ? (
                  <>
                    {content.usCenter.address}
                    <br /><br />
                    <b>{content.usCenter.phone1}</b>
                  </>
                ) : (
                  <>
                    <b>{content.usCenter.centerOfExcellence}</b>
                    <br /><br />
                    {content.usCenter.address}
                    <br /><br />
                    <b>{content.usCenter.zipCode}, {content.usCenter.country}</b>
                    <br /><br />
                    <b>{content.usCenter.phone1}</b>
                    <br /><br />
                    <b>{content.usCenter.phone2}</b>
                  </>
                )}
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="w-full">
      <img
        src="/logos/segura-logo-tagline.png"
        alt="Segura logo"
        class="footer_logo w-3/4 md:w-1/5"
        width="460"
        height="94"
        loading="lazy"
        decoding="async"
      />
    </div>
  </div>
</section>

<section class="footer_ai_section font-base" style="background-color: #f0f9f8;">
  <div class="py-8 container mx-auto flex flex-col md:flex-row gap-10 w-full justify-between max-md:max-w-full">
    <div class="social_row flex flex-col md:flex-row justify-between md:items-end gap-4 md:gap-0">
          <div class="flex flex-col gap-3">
