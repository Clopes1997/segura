<MainLayout
  lang="pt-br"
  title="Segura® (anteriormente senhasegura) - Gestão de Acesso Privilegiado"
  description="Segura® - Gestão de Acesso Privilegiado e plataforma completa de segurança de identidade. Anteriormente senhasegura."
  canonical={`${Astro.url.origin}/pt-br/`}
>
  <main>
    <HeroSection content={homepage.hero} />
    <PlatformSection content={homepage.platform} />
    <PartnersSection title={homepage.partners.title} />
    <WhySeguraSection content={homepage.whySegura} />
    <TestimonialsSection content={homepage.testimonials} />
    <ComplianceSection content={homepage.compliance} />
    <SoftwareReviewSection content={homepage.softwareReview} />
    <GartnerReportSection content={homepage.gartnerReport} />
    <ComparisonSection content={homepage.comparison} />
    <SupportSection content={homepage.support} />
    <CompetitorsStripSection />
    <AwardsSection content={homepage.awards} />
    <FAQSection content={homepage.faq} />
    <BlogCardsSection content={homepage.blogCards} />
    <StripeCTASection content={homepage.stripeCTA} />
