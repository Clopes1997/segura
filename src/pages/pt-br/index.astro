---
import MainLayout from '../../layouts/MainLayout.astro';
import homepage from '../../content/pt/homepage';
import HeroSection from '../../components/sections/HeroSection/HeroSection.astro';
import PlatformSection from '../../components/sections/PlatformSection/PlatformSection.astro';
import PartnersSection from '../../components/sections/PartnersSection/PartnersSection.astro';
import WhySeguraSection from '../../components/sections/WhySeguraSection/WhySeguraSection.astro';
import FAQSection from '../../components/sections/FAQSection/FAQSection.astro';
import TestimonialsSection from '../../components/sections/TestimonialsSection/TestimonialsSection.astro';
import ComplianceSection from '../../components/sections/ComplianceSection/ComplianceSection.astro';
import SoftwareReviewSection from '../../components/sections/SoftwareReviewSection/SoftwareReviewSection.astro';
import GartnerReportSection from '../../components/sections/GartnerReportSection/GartnerReportSection.astro';
import ComparisonSection from '../../components/sections/ComparisonSection/ComparisonSection.astro';
